<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tiffinImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="top"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tiffinTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punjabi Thali"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tiffinDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Punjabi Thali with 5 items and 5 days per week"
                android:textSize="14dp"
                android:textColor="@color/lightGrey"/>
            <TextView
                android:id="@+id/tiffinPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$70/per month"
                android:textSize="16dp"
                android:textColor="@color/blue"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
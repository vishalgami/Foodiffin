<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:id="@+id/infoLinearLayout"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/paymentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Enter all payment details"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Full Name"
            android:textColor="@color/login"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nameEditTextPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Your Full Name"
            android:inputType="text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Phone Number"
            android:textColor="@color/login"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/phoneEditTextPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="444-555-6666"
            android:inputType="number"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Enter your address"
            android:textColor="@color/login"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/addressEditTextPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="370 Dixon Road"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Card Details"
            android:textColor="@color/login"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/cardNumberEditTextPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Enter Card Number"
            android:inputType="number"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/cardExpiryEditTextPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:hint="Expiration Date (MM/YYYY)"
            android:textSize="14sp"
            android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/cardDetailsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/postalCodeEditTextPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="Postal Code (MXXXX2)"
                android:inputType="text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cvvEditTextPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="sans-serif-black"
                android:hint="CVV (XXX)"
                android:inputType="numberPassword"
                android:textSize="14sp"
                android:textStyle="bold" />
    </LinearLayout>
        <Button
            android:id="@+id/btnPayement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/btn"
            android:text="Order Food" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
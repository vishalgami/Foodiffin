<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".activities.FoodDetails">

    <ImageView
        android:id="@+id/tiffinImageViewDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="top"/>

    <TextView
        android:id="@+id/tiffinTitleTextViewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punjabi Thali"
        android:textAllCaps="true"
        android:textSize="28dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiffinImageViewDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tiffinDescriptionTextViewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Punjabi Thali with 5 items and 5 days per week"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiffinTitleTextViewDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/lightGrey"/>
    <TextView
        android:id="@+id/tiffinFixedTextViewDetail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="> Monday to Friday\n> Located near Airport Road and HumberWest Parkway\n> Free Home Delivery"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiffinDescriptionTextViewDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/lightGrey"/>
    <TextView
        android:id="@+id/tiffinMenuTextViewDetail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiffinFixedTextViewDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/lightGrey"/>
    <TextView
        android:id="@+id/tiffinPriceTextViewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiffinMenuTextViewDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="22sp" />
    <Button
        android:id="@+id/buttonOrderFoodDetail"
        android:onClick="placeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiffinPriceTextViewDetail"
        android:text="Place Order" />

</androidx.constraintlayout.widget.ConstraintLayout>